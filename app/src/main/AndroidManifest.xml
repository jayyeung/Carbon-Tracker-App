<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.as3.parmjohal.carbontracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- splash screen -->
        <activity
            android:name=".UI.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- dashboard -->
        <activity
            android:name=".UI.MainActivity"
            android:screenOrientation="portrait" />

        <!-- journey -->
        <activity android:name=".UI.SelectCarActivity" />
        <activity android:name=".UI.AddCarActivity" />
        <activity android:name=".UI.SelectRouteActivity" />
        <activity android:name=".UI.EditCarActivity" />
        <activity android:name=".UI.AddRouteActivity" />
        <activity android:name=".UI.ConfirmTripActivity" />
        <activity android:name=".UI.EditRouteActivity" />

        <!-- pop-up-windows -->
        <activity android:name=".UI.CalenderActivity"
            android:theme="@style/AppTheme.PopBackground" />
    </application>

</manifest>