<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.as3.parmjohal.carbontracker"
    android:versionName="@string/app_version">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- splash screen -->
        <activity
            android:name=".UI.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- dashboard -->
        <activity
            android:name=".UI.MainActivity"
            android:screenOrientation="portrait" />

        <!-- journey -->
        <activity
            android:name=".UI.SelectCarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.AddCarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.SelectRouteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.EditCarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.AddRouteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.ConfirmTripActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.EditRouteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.SelectTransActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.BusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.WalkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.TrainActivity"
            android:screenOrientation="portrait" />
        //Utilities
        <activity
            android:name=".UI.UtilitiesActivity"
            android:screenOrientation="portrait" />
        <!-- Utility -->
        <activity
            android:name=".UI.CalenderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopBackground" />
        <activity android:name=".UI.CreditsActivity"></activity>

        <activity android:name=".UI.SelectCarImageActivity"
            android:theme="@style/Theme.AppCompat.Dialog"
            ></activity>
        
        <receiver android:name=".AlarmReceiver" />

    </application>

</manifest>