<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_height="89.764dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/journey_1"
        android:scaleType="centerCrop"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorHeading"
        android:id="@+id/background_overlay"
        android:alpha="0.6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="21sp"
        android:paddingRight="21sp"
        android:paddingTop="21sp"
        android:paddingBottom="21sp"
        android:layout_weight="0.36"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
                android:text="302g CO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_marginBottom="2sp"
                android:textSize="18sp"
                android:elevation="4dp"
                android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <TextView
                android:text="Car Trip â€¢ On 01/23/17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@android:color/background_light" />

    </LinearLayout>

</RelativeLayout>
