<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_journey_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.as3.parmjohal.carbontracker.JourneyDetails">

    <TextView
        android:text="Your Carbon Usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@color/fadedBackground"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="302"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_CO2"
        android:textSize="72sp"
        android:paddingTop="24sp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <TextView
        android:text="kg of COâ‚‚"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_CO2Units"
        android:textSize="24sp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <TextView
        android:text="On 01/23/17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="16sp"
        android:paddingTop="8sp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:textColor="@color/colorSubtitle" />

    <TextView
        android:text="Car Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:letterSpacing="0.2"
        android:textAllCaps="true"
        android:id="@+id/title"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorHeading"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:elevation="5dp"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0sp"
            android:paddingBottom="21sp"
            android:layout_weight="0.36"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/display_mainCar"
                android:layout_weight="1"
                android:layout_marginBottom="2sp"
                android:textSize="16sp"
                android:elevation="4dp"
                android:textColor="@color/fadedBackground"
                android:textStyle="normal|bold"
                android:text="car_title" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:text="Route Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:letterSpacing="0.2"
        android:textAllCaps="true"
        android:id="@+id/title"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorHeading"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:elevation="5dp"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0sp"
            android:paddingBottom="21sp"
            android:layout_weight="0.36"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/display_Route"
                android:layout_weight="1"
                android:layout_marginBottom="2sp"
                android:textSize="16sp"
                android:elevation="4dp"
                android:textColor="@color/fadedBackground"
                android:textStyle="normal|bold"
                android:text="route_title" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="edit car"
            android:id="@+id/editCarButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Edit Route"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/editRoute"
            android:visibility="gone"
            android:layout_weight="1" />

        <Button
            android:text="delete"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/delete"
            android:visibility="gone"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
