<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.as3.parmjohal.carbontracker.MainActivity">

    <!-- sub FAB buttons -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/fab_main"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:id="@+id/fab_transport"
        app:backgroundTint="@color/fabTransport"
        app:srcCompat="@drawable/car"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/fab_main"
        android:layout_alignStart="@+id/fab_main"
        android:visibility="invisible"
        android:layout_marginStart="7dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/fadedBackground"
        android:id="@+id/fab_overlay"
        android:alpha="0.8"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/dashboard_1"
                    android:id="@+id/background"
                    android:alpha="0.5"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@color/colorPrimary"
                    android:id="@+id/background_overlay"
                    android:alpha="0.8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/chart"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/title"
                    android:elevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_alignParentStart="true"></com.github.mikephil.charting.charts.PieChart>

                <TextView
                    android:text="Carbon Overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:letterSpacing="0.2"
                    android:textAllCaps="true"
                    android:id="@+id/title"
                    android:textSize="14sp"
                    android:paddingTop="16dp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:weightSum="1">


                <TextView
                    android:text="ALL JOURNEYS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/scrollView2"
                    android:layout_marginTop="32dp"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:letterSpacing="0.2"
                    android:textAllCaps="true"
                    android:id="@+id/title"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorHeading"
                    android:fontFamily="sans-serif" />

                <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/journeys"
                    android:layout_marginTop="8dp"
                    android:divider="#c4c4c4"
                    android:dividerHeight="1.0sp"
                    android:overScrollFooter="@android:color/transparent"
                    android:footerDividersEnabled="false"
                    android:scrollbars="none"
                    android:stackFromBottom="true"
                    android:transcriptMode="normal"
                    android:focusable="false"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:background="#c4c4c4"
                android:id="@+id/end">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/end"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
