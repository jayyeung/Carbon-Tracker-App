<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.as3.parmjohal.carbontracker.MainActivity">

    <!-- sub FAB buttons -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/fab_main"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:id="@+id/fab_transport"
        app:backgroundTint="@color/fabTransport"
        app:srcCompat="@drawable/car"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/fab_main"
        android:layout_alignStart="@+id/fab_main"
        android:visibility="invisible"
        android:layout_marginStart="7dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:weightSum="1">

            <TextView
                android:text="Your Carbon Progress "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView2"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:textColor="@color/colorSubtitle" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:id="@+id/chart"
                android:layout_weight="11.17">

            </com.github.mikephil.charting.charts.BarChart>


            <TextView
                android:text="ALL JOURNEYS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView2"
                android:layout_marginTop="32dp"
                android:textAllCaps="true"
                android:id="@+id/textView"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorHeading" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:id="@+id/journeys"
                android:layout_marginTop="16dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="16.0sp"
                android:scrollbars="none"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
