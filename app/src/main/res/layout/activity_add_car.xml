<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.as3.parmjohal.carbontracker.AddCarActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Car's Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carName"

                android:layout_alignStart="@+id/carMake"
                android:layout_weight="1" />

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editName"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/makeSpinner"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carMake"
                android:layout_marginTop="20dp"
                android:layout_alignBaseline="@+id/editName"
                android:layout_alignBottom="@+id/editName"
                android:layout_alignParentStart="true"

                android:layout_weight="1" />

            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/makeSpinner"
                android:layout_marginTop="20dp"
                android:layout_width="220dp"
                android:layout_below="@+id/editName"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/carName"
                android:layout_alignStart="@+id/carName"

                android:id="@+id/carModel"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/modelSpinner"
                android:layout_below="@+id/yearSpinner"
                android:layout_alignStart="@+id/yearSpinner"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout">

            <TextView
                android:text="Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/yearSpinner"
                android:layout_alignEnd="@+id/carMake"
                android:id="@+id/carYear"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/yearSpinner"
                android:layout_below="@+id/makeSpinner"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Select Car Type:"
                android:layout_marginTop="10dp"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_below="@+id/textView7"
            android:id="@+id/carList" />

    </LinearLayout>

</RelativeLayout>
